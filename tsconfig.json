{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@config/*": ["./src/config/*"],
      "@models/*": ["./src/models/*"],
      "@utils/*": ["./src/shared/utils/*"],
      "@providers/*": ["./src/shared/providers/"],
      "@shared/*": ["./src/shared/*"],
      "@app/*": ["./src/*"]
    }
  }
}
